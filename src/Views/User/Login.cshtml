@model GameSalad.ViewModels.User.LoginVM
@{
    ViewData["title"] = "GameSalad | Login";
}

<h2> Login </h2>

@if(TempData["CreatedUser"] != null) {
    <div>
        Successfully registered
        <b>@TempData["CreatedUser"]</b>
    </div>
}

<form action="@Url.Action("Login")" method="post">
    <div class="inline_block">
        <table>
            <tr>
                <td>@Html.LabelFor(m => m.Username)</td>
                <td>@Html.TextBoxFor(m => m.Username)</td>
                <td>@Html.ValidationMessageFor(m => m.Username)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Password)</td>
                <td>@Html.PasswordFor(m => m.Password)</td>
                <td>@Html.ValidationMessageFor(m => m.Password)</td>
            </tr>
        </table>

        <input type="submit" value="Login" />
        <div>@Html.ValidationMessage("authError")</div>
    </div>
    <small>
        Unless you modified compose.yaml to save the SQL data,
        <br />
        <b>ALL DATA will be WIPED CLIEAN on EVERY system restart.</b>
    </small>
</form>

